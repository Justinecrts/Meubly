<form class="form-inline" action="offers">
  <div class="form-group">
    <label class="sr-only" for="description">Email address</label>
    <input type="name" class="form-control" id="description" placeholder="Search for something..." name="name">
  </div>
  <% Offer::CATEGORY.each do |category| %>
    <div class="checkbox"><label><input name="<%= category %>" type="checkbox"><%= category.capitalize %></label></div>
  <% end %>
  <button type="submit" class="btn btn-default">Search</button>
</form>
