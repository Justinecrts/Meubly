
<div class="container">
  <div class="row">
    <h1 class='text-center title'>Everything you need to furnish your appartment</h1>
    <% @offers.each do |offer|  %>
      <div class="col-xs-12 col-sm-4">
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= cl_image_path "#{offer.photo}", height: 300, width: 400,gravity: :center, crop: :fill %>')">
          <div class="card-category"><%= offer.name %></div>
      <%= link_to "", offer_path(offer), class:'card-link'  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
