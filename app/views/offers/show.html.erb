<div class="container">
  <div class="row">
    <div class="media">
      <div class="media-body">
        <div class="media-section">
          <h2><%= @offer.name %></h2>
          <%= cl_image_tag @offer.photo, height: 300, width: 400, crop: :fill %>
        </div>
        <div class="media-section">
          <h2>Description</h2>
          <p><%= @offer.description %></p>
          <i class="fa fa-pencil-square-o showmyform" aria-hidden="true"></i>

            <div class="hidden description_offer">
              <%= simple_form_for [@offer] do |f| %>
                <%= f.input :description %>
                <%= f.submit "Change description", class: "btn btn-primary" %>
              <% end %>
            </div>

        </div>
      </div>

      <div class="media-aside">

        <div class="media-section">
          <h2>Price</h2>
          <p><i class="fa fa-pencil-square-o showmyformprice" aria-hidden="true"></i><%= @offer.price %></p>
            <div class="hidden price_offer">
              <%= simple_form_for [@offer] do |f| %>
                <%= f.input :price %>
                  <%= f.submit "Change price", class: "btn btn-primary" %>
                    <%  link_to offer_path(@offer), method: :update do %>
                  <% end %>
                <% end %>
            </div>
        </div>

        <div class="media-section">
          <h2>Category</h2>
          <p><i class="fa fa-pencil-square-o showmyformcategory" aria-hidden="true"></i><%= @offer.category %></p>
            <div class="hidden category_offer">
              <%= simple_form_for [@offer] do |f| %>
              <%= f.input :category, collection: Offer::CATEGORY, prompt: "Select a category"%>
              <%= f.submit "Change category", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>

        <div class="media-section">
          <h2>Location</h2>
          <p><i class="fa fa-pencil-square-o showmyformaddress" aria-hidden="true"></i><%= @offer.address %></p>
            <div class="hidden address_offer">
              <%= simple_form_for [@offer] do |f| %>
                <%= f.input :address %>
                <%= f.submit "Change address", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>

         <div class="media-section">
          <h2> <%= @offer.user.first_name %></h2>
        </div>
         <div class="media-section">
          <%= link_to "RÃ©server", offer_bookings_path(@offer), method: :post %>
        </div>

          <!-- datepicker -->
        <h3>Select a range of location</h3>
        <div>
          <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
          <input type="text" name="daterange" value="01/01/2015 - 01/31/2015" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%"" />
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script type="text/javascript" src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />
  <% end %>


